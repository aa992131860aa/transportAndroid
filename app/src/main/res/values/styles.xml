<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <!--ll    -->
    <style name="rootBasic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/offset_bottom_ll</item>
        <item name="android:paddingLeft">@dimen/offset_left_ll</item>
        <item name="android:paddingRight">@dimen/offset_right_ll</item>
        <item name="android:paddingTop">@dimen/offset_top_ll</item>
        <item name="android:background">@drawable/common_bg</item>
    </style>

    <!--RelativeLayout-->
    <style name="rootBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/offset_bottom</item>
        <item name="android:paddingLeft">@dimen/offset_left</item>
        <item name="android:paddingRight">@dimen/offset_right</item>
        <item name="android:paddingTop">@dimen/offset_top</item>
        <item name="android:background">@drawable/common_bg</item>
    </style>

    <!--btn 蓝色 实心-->
    <style name="btnBlueSolid">
        <item name="android:layout_width">144dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/selector_btn_blue</item>
        <item name="android:textColor">#346f6d</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--btn 蓝色 空心-->
    <style name="btnBlueHollow">
        <item name="android:layout_width">144dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/selector_btn_blue_hollow</item>
        <item name="android:textColor">@drawable/selector_hollow_textcolor</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--btn 黄色 实心-->
    <style name="btnYellowSolid">
        <item name="android:layout_width">144dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_btn_yellow</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--帧布局上浮动的btn-->
    <style name="floatBtn">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/selector_btn_float</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="etBgFull">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size40</item>
        <item name="android:background">@drawable/input_bg</item>
    </style>

    <style name="etNobg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size40</item>
    </style>

    <style name="etFull">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">@dimen/size17</item>
        <item name="android:paddingRight">@dimen/size7</item>
        <item name="android:textColor">@color/et_color</item>
        <item name="android:textColorHint">@color/et_hint</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor_color</item>
        <!--<item name="android:imeOptions">actionNone</item>-->
    </style>

    <!--创建时 标题-->
    <style name="tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/textSize_large</item>
        <item name="android:layout_marginBottom">@dimen/size20</item>
    </style>

    <style name="tv_title2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/textSize_large</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--创建时，默认tv，在父控件竖直居中-->
    <style name="tv_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="tv_normal_right">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
        <!--<item name="android:gravity">right</item>-->
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="tv_pre_left">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="tv_pre_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="weight_ll_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--输入框箭头-->
    <style name="arrowDown">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">12dp</item>
        <item name="android:src">@drawable/arrow_down</item>
    </style>

    <!--20sp -->
    <style name="tvCommonBlack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- 18sp的-->
    <style name="tvCommon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="tvCommon_width">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
    </style>

    <style name="etBgFullYellow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/edittext_bg_yellow</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="etFullYellow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/et_border_yellow</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>

    <!--btn通用 未设置背景-->
    <style name="btnCommon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="etWeightOne">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/et_color</item>
        <item name="android:textColorHint">@color/et_hint</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="tvUp">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">+</item>
        <item name="android:textSize">@dimen/textSize_large</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="tvDown">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">-</item>
        <item name="android:textSize">@dimen/textSize_large</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>
