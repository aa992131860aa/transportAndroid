<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="info"
            type="org.redsha.transbox.controller.on.OnWayData"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            style="@style/tv_title"
            android:text="@string/on_page1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/temp"/>

                <TextView
                    style="@style/tvCommon"
                    android:text="@string/on_tem_current"/>

                <TextView
                    style="@style/tvCommonBlack"
                    android:text="@={info.temperature}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/avg_temp"/>

                <TextView
                    style="@style/tvCommon"
                    android:text="@string/on_tem_mean"/>

                <TextView
                    style="@style/tvCommonBlack"
                    android:text="@={info.avgTemperature}"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/power"/>

                <TextView
                    style="@style/tvCommon"
                    android:text="@string/on_time_end_remainBattery"/>

                <TextView
                    style="@style/tvCommonBlack"
                    android:text="@={info.power}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/power"/>

                <TextView
                    style="@style/tvCommon"
                    android:text="@string/on_time_useBattery"/>

                <TextView
                    style="@style/tvCommonBlack"
                    android:text="@={info.expendPower}"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/humidity"/>

                <TextView
                    style="@style/tvCommon"
                    android:text="@string/on_time_humidity"/>

                <TextView
                    style="@style/tvCommonBlack"
                    android:text="@={info.humidity}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>